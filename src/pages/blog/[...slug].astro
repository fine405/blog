---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import ImageLightbox from '../../components/ImageLightbox.astro';
import { getBlogDates } from '../../utils/git-dates';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, remarkPluginFrontmatter } = await post.render();

// 使用 Git 时间
const { date, updatedDate } = getBlogDates(post.slug, post.data.date, post.data.updatedDate);

// 计算阅读时间（中文约 300 字/分钟）
const wordCount = post.body.length;
const readingTime = Math.max(1, Math.ceil(wordCount / 300));
---

<BaseLayout 
  title={`${post.data.title} - Fine`} 
  description={post.data.description}
  image={post.data.cover?.url}
  type="article"
  publishedTime={date}
  modifiedTime={updatedDate}
  tags={post.data.tags}
>
  <article class="post">
   
    <header>
      <h1>{post.data.title}</h1>
      <div class="meta">
        <span class="time-info">
          <time datetime={date.toISOString()} class="publish-time">
            发布于 <span class="local-time"></span>
          </time>
          {updatedDate && (
            <span 
              class="updated" 
              data-updated={updatedDate.toISOString()}
            >
              · <span class="relative-time"></span>更新
            </span>
          )}
        </span>
        <span class="reading-time">· 阅读约 {readingTime} 分钟</span>
      </div>
      {post.data.tags && (
        <div class="tags">
          {post.data.tags.map((tag: string) => <a href={`/tags/${tag}`} class="tag">{tag}</a>)}
        </div>
      )}
    </header>
     {post.data.cover && (
      <figure class="cover">
        <img src={post.data.cover.url} alt={post.data.cover.alt} />
        <figcaption>{post.data.cover.alt}</figcaption>
      </figure>
    )}
    <div class="content">
      <Content />
    </div>
    <ImageLightbox />

    <script is:inline>
      (function() {
        function formatRelativeTime(date) {
          const now = new Date();
          const diff = now.getTime() - date.getTime();
          const minutes = Math.floor(diff / 60000);
          const hours = Math.floor(diff / 3600000);
          const days = Math.floor(diff / 86400000);
          
          if (minutes < 1) return '刚刚';
          if (minutes < 60) return minutes + ' 分钟前';
          if (hours < 24) return hours + ' 小时前';
          if (days < 30) return days + ' 天前';
          if (days < 365) return Math.floor(days / 30) + ' 个月前';
          return Math.floor(days / 365) + ' 年前';
        }

        function formatLocalTime(date) {
          return date.toLocaleString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' });
        }

        function updateTimes() {
          // 更新发布时间
          var timeEl = document.querySelector('.publish-time');
          if (timeEl) {
            var dateStr = timeEl.getAttribute('datetime');
            var localTimeEl = timeEl.querySelector('.local-time');
            if (dateStr && localTimeEl) {
              localTimeEl.textContent = formatLocalTime(new Date(dateStr));
            }
          }
          // 更新相对时间和 title
          var updatedEl = document.querySelector('.updated[data-updated]');
          if (updatedEl) {
            var updateDateStr = updatedEl.getAttribute('data-updated');
            if (updateDateStr) {
              var updateDate = new Date(updateDateStr);
              updatedEl.setAttribute('title', formatLocalTime(updateDate));
              var relativeTimeEl = updatedEl.querySelector('.relative-time');
              if (relativeTimeEl) {
                relativeTimeEl.textContent = formatRelativeTime(updateDate);
              }
            }
          }
        }

        // 立即执行
        updateTimes();
        // View Transitions 路由切换后重新执行
        document.addEventListener('astro:page-load', updateTimes);
      })();
    </script>

    <footer>
      <a href="/blog">← 返回文章列表</a>
    </footer>

    <section class="comments">
      <h2>评论</h2>
      <script
        src="https://giscus.app/client.js"
        data-repo="fine405/blog"
        data-repo-id="R_kgDOQhlUWQ"
        data-category="General"
        data-category-id="DIC_kwDOQhlUWc4CzVPI"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="preferred_color_scheme"
        data-lang="zh-CN"
        crossorigin="anonymous"
        async
      ></script>
    </section>
  </article>
</BaseLayout>

<style>
  .cover {
    margin: 0 0 2rem;
  }

  .cover img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 12px;
  }

  .cover figcaption {
    margin-top: 0.75rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-align: center;
    font-style: italic;
  }

  .post header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .post h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .meta {
    font-size: 0.875rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .time-info {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .time-info .updated {
    color: var(--accent);
    cursor: help;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag {
    background: var(--bg-secondary);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.8rem;
    text-decoration: none;
    color: var(--text-secondary);
    transition: background 0.2s;
  }

  .tag:hover {
    background: var(--border);
    color: var(--accent);
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  .content :global(h3) {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    display: block;
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .content :global(th),
  .content :global(td) {
    border: 1px solid var(--border);
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .content :global(th) {
    background: var(--bg-secondary);
    font-weight: 600;
  }

  .content :global(tr:hover) {
    background: var(--bg-secondary);
  }

  .post footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .comments {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .comments h2 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }
</style>
