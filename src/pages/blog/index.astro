---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="文章列表 - Fine">
  <h1>所有文章</h1>
  <ul class="post-list">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.slug}`}>
          <article>
            <h2>{post.data.title}</h2>
            <p class="meta">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('zh-CN')}
              </time>
              {post.data.tags && (
                <span class="tags">
                  {post.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
                </span>
              )}
            </p>
            <p class="excerpt">{post.data.description}</p>
          </article>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  h1 {
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }

  .post-list {
    list-style: none;
  }

  .post-list li {
    margin-bottom: 1rem;
  }

  .post-list a {
    text-decoration: none;
    color: inherit;
    display: block;
    padding: 1.25rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: border-color 0.2s, background 0.2s;
  }

  .post-list a:hover {
    border-color: var(--accent);
    background: var(--bg-secondary);
  }

  .post-list h2 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .meta {
    font-size: 0.85rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background: var(--bg-secondary);
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .excerpt {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
  }
</style>
